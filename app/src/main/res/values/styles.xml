<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Notes" />

    <style name="toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:tint">@color/text_secondary</item>
        
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!--  Text  -->
    <style name="text_typical">
        <item name="android:textSize">@dimen/text_typical</item>
        <item name="android:textColor">@color/text_on_surface</item>
    </style>

    <!--  Button  -->
    <style name="outlined_inactive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="popup_item_icon">
        <item name="android:layout_width">@dimen/ic_menu_item</item>
        <item name="android:layout_height">@dimen/ic_menu_item</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="popup_item_text" parent="text_typical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_md</item>
        <item name="android:layout_marginEnd">@dimen/margin_lg</item>
    </style>

    <style name="popup_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_md</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="icon_button_typical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.9</item>
        <item name="tint">@color/text_secondary</item>
        <item name="android:padding">@dimen/margin_sm</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>
</resources>